{% extends 'base.html.twig' %}

{% block body %}
    <h1>Remito</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ remito.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if remito.fecha %}{{ remito.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ remito.numero }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('remito_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('remito_edit', { 'id': remito.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
