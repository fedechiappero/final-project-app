{% extends 'base.html.twig' %}

{% block body %}
    <h1>Salidas list</h1>

    <table>
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salida in salidas %}
            <tr>
                <td><a href="{{ path('salida_show', { 'id': salida.id }) }}">{{ salida.fecha }}</a></td>
                <td>{{ salida.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('salida_show', { 'id': salida.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('salida_edit', { 'id': salida.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('salida_new') }}">Create a new salida</a>
        </li>
    </ul>
{% endblock %}
