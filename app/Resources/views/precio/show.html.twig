{% extends 'base.html.twig' %}

{% block body %}
    <h1>Precio</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ precio.id }}</td>
            </tr>
            <tr>
                <th>Idproveedor</th>
                <td>{{ precio.idProveedor }}</td>
            </tr>
            <tr>
                <th>Idproducto</th>
                <td>{{ precio.idProducto }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ precio.precio }}</td>
            </tr>
            <tr>
                <th>Fechaultimaactualizacion</th>
                <td>{% if precio.fechaUltimaActualizacion %}{{ precio.fechaUltimaActualizacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('precio_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('precio_edit', { 'id': precio.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
