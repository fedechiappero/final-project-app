{% extends 'base.html.twig' %}

{% block body %}
    <body class="contact-page">
    <div class="wrap-body">


        <!--////////////////////////////////////Container-->
        <section id="container">
            <div class="wrap-container">
                <div class="zerogrid">
                    <div class="row">
                        <h1 class="t-center" style="margin: 40px 0;color: #212121;letter-spacing: 2px;font-weight: 500;">Contacto</h1>
                        <div class="col-full">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1404.9043266036867!2d-64.34933154955642!3d-33.123686587642894!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95d2000fbdd02247%3A0xc58d0a705d7cc0e3!2sR%C3%ADo+Cuarto%2C+Provincia+de+C%C3%B3rdoba%2C+Argentina!5e0!3m2!1ses-419!2sus!4v1500502938872" width="100%" height="450" frameborder="0" style="border:0"></iframe>
                        </div>
                        <div class="col-1-3">
                            <div class="wrap-col">
                                <h3 style="margin: 20px 0">Información de contacto</h3>
                                <p>Río Cuarto, Constitución sin número<br>
                                    Córdoba, Argentina</p>
                                <p>(0237) 463-6888<br>
                                    (0237) 4794-0581</p>
                                <p>info@constructorasa.com</p>
                            </div>
                        </div>
                        <div class="col-2-3">
                            <div class="wrap-col">
                                <div class="contact">
                                    <h3 style="margin: 20px 0 20px 30px">Formulario de contacto</h3>
                                    <div id="contact_form">
                                        <form name="form1" id="ff" method="post" action="{{ path('sendemail') }}">
                                            <label class="row">
                                                <div class="col-1-2">
                                                    <div class="wrap-col">
                                                        <input type="text" name="name" id="name" placeholder="Ingrese su nombre" required="required" />
                                                    </div>
                                                </div>
                                                <div class="col-1-2">
                                                    <div class="wrap-col">
                                                        <input type="email" name="email" id="email" placeholder="Ingrese su e-mail" required="required" />
                                                    </div>
                                                </div>
                                            </label>
                                            <label class="row">
                                                <div class="col-full">
                                                    <div class="wrap-col">
                                                        <input type="text" name="subject" id="subject" placeholder="Asunto" required="required" />
                                                    </div>
                                                </div>
                                            </label>
                                            <label class="row">
                                                <div class="wrap-col">
														<textarea name="message" id="message" class="form-control" rows="4" cols="25" required="required"
                                                                  placeholder="Mensaje"></textarea>
                                                </div>
                                            </label>
                                            <center><input class="sendButton" type="submit" name="submitcontact" value="Enviar"></center>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    </body>
{% endblock %}