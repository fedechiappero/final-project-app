{% extends 'base.html.twig' %}

{% block body %}
    <h1>Producto edit</h1>

    {{ include(':producto:form.html.twig') }}

    <ul>
        <li>
            <a href="{{ path('producto_index') }}">Back to the list</a>
        </li>
    </ul>

    <script>
        $(document).ready(function() {
            var producto = {{ producto.id }};
            $('#frmproducto').attr('action', "{{ path('producto_edit', {'id': producto.id}) }}");
        });
    </script>
{% endblock %}
