{% extends 'base.html.twig' %}

{% block body %}
    <h1>Persona edit</h1>

    {{ include(':persona:form.html.twig') }}

    <ul>
        <li>
            <a href="{{ path('persona_index') }}">Back to the list</a>
        </li>
    </ul>

    <script>
        $(document).ready(function() {
            var persona = {{ persona.id }};
            $('#frmpersona').attr('action', "{{ path('persona_edit', {'id': persona.id}) }}");
        });
    </script>
{% endblock %}
