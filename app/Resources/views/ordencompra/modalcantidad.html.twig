<div id="modalcantidad" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cantidad a incluir en Orden</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="col-lg-2">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button type="button" class="quantity-left-minus btn btn-danger btn-number"  data-type="minus" data-field="">
                                    <span class="glyphicon glyphicon-minus"></span>
                                </button>
                            </span>
                            <input type="text" id="quantity" name="quantity" class="form-control input-number" min="1" max="100" style="text-align: center; width: auto">
                            <span class="input-group-btn">
                                <button type="button" class="quantity-right-plus btn btn-success btn-number" data-type="plus" data-field="">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>

                <input id="indexeditar" type="hidden">

                <div class="row justify-content-center">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <button type="button" class="btn btn-success" data-dismiss="modal" id="btnaceptar">Aceptar</button>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <button type="button" class="btn btn-default" data-dismiss="modal" id="close">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>